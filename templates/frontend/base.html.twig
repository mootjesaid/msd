<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

    {% block stylesheets %}
        <!-- Tailwind or other CSS loaded here -->
    {% endblock %}

    {% block javascripts %}
        {{ importmap('app') }}
    {% endblock %}
</head>
    <body id="{% block body_id %}main-body{% endblock %}" class="antialiased bg-base">

        {% block header %}
            {% include 'components/Frontend/Navigation.html.twig' %}
        {% endblock %}

        <div class="h-auto">
            {% block body %}
                <main>
                    {% block main %}{% endblock %}
                </main>
            {% endblock %}
        </div>

        {% block footer %}
            {% include 'components/Frontend/Footer.html.twig' %}
        {% endblock %}

        <div id="flash-container">
            {{ include('admin/_flashes.html.twig') }}
        </div>

    </body>
</html>
