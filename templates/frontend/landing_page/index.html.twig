{% extends 'frontend/base.html.twig' %}

{% block main %}
    <section class="bg-base relative lg:bg-none">
        <!-- Mobile background image -->
        <div class="absolute inset-0 bg-cover bg-center lg:hidden" style="background-image: url('{{ asset('images/mosque.jpg') }}'); opacity: 0.4;"></div>

        <div class="relative container grid gap-8 py-12 lg:py-16 lg:grid-cols-12">
            <div class="place-self-center lg:col-span-5">
                <h1 class="max-w-2xl mb-4 text-3xl text-primary font-extrabold tracking-tight leading-tight md:text-4xl xl:text-6xl">
                    Islamitisch Kenniscentrum voor Jong en Oud
                </h1>
                <p class="max-w-2xl mb-6 font-light text-gray-700 md:text-lg lg:text-xl">
                    Ontdek de schoonheid van islamitische kennis en cultuur. Samen bouwen we aan een gemeenschap van begrip en wijsheid voor alle generaties.
                </p>
                <div class="flex flex-wrap gap-4">
                    <a href="#programmas" class="inline-flex items-center justify-center px-5 py-3 text-base font-medium text-white bg-primary rounded-lg hover:bg-opacity-90 focus:ring-4 focus:ring-primary focus:ring-opacity-50 transition-all">
                        Ontdek onze programma's
                        <svg class="w-5 h-5 ml-2 -mr-1" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                    </a>
                    <a href="#contact" class="inline-flex items-center justify-center px-5 py-3 text-base font-medium text-primary border-2 border-primary rounded-lg hover:bg-primary hover:text-white transition-all">
                        Contact
                    </a>
                </div>
            </div>

            <!-- Desktop image -->
            <div class="hidden lg:flex lg:col-span-7 justify-center">
                <img class="rounded-xl shadow-lg" src="{{ asset('images/mosque.jpg') }}" alt="Moskee">
            </div>
        </div>
    </section>

    <section class="py-12">
        <div class="container mx-auto grid grid-cols-1 lg:grid-cols-2">

            <!-- Image block -->
            <div class="h-64 md:h-96 lg:h-auto">
                <img src="{{ asset('images/mosque.jpg') }}" alt="Voorbeeld afbeelding" class="w-full h-full object-cover">
            </div>

            <!-- Text block -->
            <div class="bg-primary text-white flex flex-col justify-center p-6 md:p-12">
                <h2 class="text-2xl md:text-3xl font-bold mb-4">Jouw Titel Hier</h2>
                <p class="text-base md:text-lg">Jouw tekst komt hier. Voeg hier informatie, uitleg of call to action toe.</p>
            </div>

        </div>
    </section>




    <section id="programmas" class="py-16 bg-base">
